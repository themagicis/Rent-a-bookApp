<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Rent-A-Book web system</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img width="32" height="50" src="~/Images/book_icon.png" class="logo pull-left"/>
                <a class="brand" href="#">Rent-A-Book</a>
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li><a href="~/Home/Index">Home</a></li>
                        @if (User.IsInRole("SuperAdmin"))
                        {
                            <li>@Html.ActionLink("Admin Tools", "Index", "Home")</li>
                        }
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Activity <i class="caret"></i></a>
                            <ul class="dropdown-menu">
                                <li><a href="#"><i class="icon-resize-full"></i>Received requests</a></li>
                                <li><a href="#"><i class="icon-resize-small"></i>Sent requests</a></li>
                                <li><a href="#"><i class="icon-calendar"></i> Calendar</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-search"></i></a>
                            <form class="dropdown-menu form-search">
                                <input type="text" class="input-medium search-query">
                                <button type="submit" class="btn">
                                    <i class="icon-search"></i>
                                </button>
                                <p>
                                    <select>
                                        <option>Filter by town</option>
                                    </select>
                                </p>
                                <p>
                                    <select>
                                        <option>Filter by genre</option>
                                    </select>
                                </p>
                            </form>
                        </li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div><!--/.nav-collapse -->
            </div>
        </div>
    </div>

    @RenderBody()

    <footer class="footer">
        <div class="container">

            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </div>
    </footer>
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
